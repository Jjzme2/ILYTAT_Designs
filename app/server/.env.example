# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=ilytat_designs_dev

# JWT Configuration
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_secret
JWT_REFRESH_EXPIRES_IN=7d

# STRIPE Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key

# Password Configuration
PASSWORD_SALT_ROUNDS=10
PASSWORD_MIN_LENGTH=8

# Session Configuration
MAX_CONCURRENT_SESSIONS=5
SESSION_INACTIVITY_TIMEOUT=1800000

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CLIENT_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# Logging Configuration
# Possible values: error, warn, info, debug
LOG_LEVEL=info
# Set to 'true' to disable console logging (useful for keeping console clean in development)
SUPPRESS_CONSOLE=false
# Log retention period in days (default: 14)
LOG_RETENTION_DAYS=14
# Maximum size of each log file before rotation (default: 20m)
LOG_MAX_SIZE=20m
LOG_FILE_PATH=logs/app.log

# Printify Configuration
PRINTIFY_API_KEY=your_printify_api_key
DEFAULT_PRINTIFY_SHOP_ID=0

# Email Configuration
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@ilytatdesigns.com
SUPPORT_EMAIL=support@ilytatdesigns.com

# SendGrid Template IDs
SENDGRID_VERIFICATION_TEMPLATE_ID=d-xxxxxxxxxxxx
SENDGRID_PASSWORD_RESET_TEMPLATE_ID=d-xxxxxxxxxxxx
SENDGRID_PASSWORD_CHANGED_TEMPLATE_ID=d-xxxxxxxxxxxx
SENDGRID_ORDER_CONFIRMATION_TEMPLATE_ID=d-xxxxxxxxxxxx

# Development Email Configuration
# Option 1: Mailtrap.io (recommended for development)
MAILTRAP_USER=your_mailtrap_user
MAILTRAP_PASS=your_mailtrap_password

# Option 2: Gmail (requires App Password)
GMAIL_USER=your_gmail_account@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# Option 3: Custom SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# Save emails to disk for inspection (useful when no email provider is configured)
SAVE_EMAILS_TO_DISK=true

# Database Seeding Configuration
# Set to 'true' to run seeders automatically in development environment
SEED_DB=false
