# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=ilytat_designs_dev

# JWT Configuration
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_secret
JWT_REFRESH_EXPIRES_IN=7d

# Password Configuration
PASSWORD_SALT_ROUNDS=10
PASSWORD_MIN_LENGTH=8

# Session Configuration
MAX_CONCURRENT_SESSIONS=5
SESSION_INACTIVITY_TIMEOUT=1800000

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
CLIENT_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3001,http://127.0.0.1:5173

# Logging Configuration
# Possible values: error, warn, info, debug
LOG_LEVEL=info
# Set to 'true' to disable console logging (useful for keeping console clean in development)
SUPPRESS_CONSOLE=false
# Log retention period in days (default: 14)
LOG_RETENTION_DAYS=14
# Maximum size of each log file before rotation (default: 20m)
LOG_MAX_SIZE=20m
LOG_FILE_PATH=logs/app.log

# Printify Configuration
PRINTIFY_API_KEY=your_printify_api_key
