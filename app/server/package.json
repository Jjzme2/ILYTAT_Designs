{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "generate-random-string": "node ./src/utils/generateRandomString.js",
    "syncDatabase": "node ./src/scripts/syncDatabase.js",
    "migrate": "npx sequelize-cli db:migrate",
    "rollback": "npx sequelize-cli db:rollback",
    "start": "node ./src/index.js",
    "dev": "nodemon ./src/index.js",
    "logs:rotate": "node ./src/utils/logger/rotate.js",
    "logs:clean": "node ./src/utils/logger/clean.js",
    "kill-server": "powershell -Command \"Get-NetTCPConnection -LocalPort 3000 -ErrorAction SilentlyContinue | ForEach-Object { Stop-Process -Id (Get-Process | Where-Object {$_.Id -eq $_.OwningProcess}) -Force -ErrorAction SilentlyContinue }\"",
    "kill-node": "powershell -Command \"Get-Process -Name node -ErrorAction SilentlyContinue | Stop-Process -Force -ErrorAction SilentlyContinue\"",
    "safe-start": "npm run kill-server && npm run dev",
    "lint": "eslint . --ext .js --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "The server for Ilytat Designs",
  "dependencies": {
    "@sendgrid/mail": "^8.1.4",
    "axios": "^1.8.1",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "chalk": "^4.1.2",
    "cls-hooked": "^4.2.2",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.1",
    "gray-matter": "^4.0.3",
    "helmet": "^8.0.0",
    "highlight.js": "^11.11.1",
    "joi": "^17.13.3",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-table-of-contents": "^0.9.0",
    "marked": "^15.0.7",
    "morgan": "^1.10.0",
    "mysql2": "^3.12.0",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.10.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "path": "^0.12.7",
    "sanitize-html": "^2.14.0",
